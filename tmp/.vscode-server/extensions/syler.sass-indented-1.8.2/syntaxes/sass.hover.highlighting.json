{
  "fileTypes": ["sass.hover"],
  "name": "Sass Hover",
  "patterns": [
    {
      "match": "(Path)",
      "name": "entity.name.function"
    },
    {
      "match": "[\\t ]*([A-z\\/-]+)",
      "name": "meta.path",
      "captures": {
        "1": {
          "name": "keyword.control"
        }
      }
    },
    {
      "begin": "\\.([A-z-]+)",
      "end": "\\n|[\\t ]",
      "name": "meta.extension",
      "captures": {
        "1": {
          "name": "keyword.other"
        }
      }
    }
  ],

  "scopeName": "source.sass.hover"
}
